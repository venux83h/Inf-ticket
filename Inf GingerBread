-- LocalPlayer
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Function to find a descendant by name
local function findDescendant(parent, name)
    for _, v in pairs(parent:GetDescendants()) do
        if v.Name == name then
            return v
        end
    end
    return nil
end

-- Wait for ScreenGui in workspace
local screenGui
repeat
    screenGui = workspace:FindFirstChildOfClass("ScreenGui")
    wait(0.5)
until screenGui

-- Find the relevant elements
local Tokens = findDescendant(screenGui, "Tokens")
local Ticket = findDescendant(screenGui, "Ticket")
local Points = findDescendant(screenGui, "Points")
local Streak = findDescendant(screenGui, "Streak")

-- Ensure Ticket exists
if not Ticket then
    warn("Ticket not found!")
    return
end

-- Store the last value of Ticket
local lastTicketValue = Ticket.Text

-- Function to give Infinite GingerBread
local function giveInfGingerBread()
    -- Example: Assuming there's a Leaderstats property called GingerBread
    local stats = LocalPlayer:FindFirstChild("leaderstats")
    if stats then
        local GingerBread = stats:FindFirstChild("GingerBread")
        if GingerBread then
            GingerBread.Value = math.huge
        end
    end
end

-- Monitor Ticket changes
Ticket:GetPropertyChangedSignal("Text"):Connect(function()
    if Ticket.Text ~= lastTicketValue then
        print("Ticket changed from", lastTicketValue, "to", Ticket.Text)
        lastTicketValue = Ticket.Text
        giveInfGingerBread()
    end
end)

print("Ticket monitor running...")
